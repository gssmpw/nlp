  author = {{Brzezi{\'n}ska-Paw{\l}owska}, Olga E. and Rydzewska, Anna D. and {\L}uczy{\'n}ska, Marta and {Majkowska-Wojciechowska}, Barbara and Kowalski, Marek L. and Makowska, Joanna S.},
