@article{terstal2020b,
  title = {Design {{Features}} of {{Embodied Conversational Agents}} in {{eHealth}}: A {{Literature Review}}},
  shorttitle = {Design {{Features}} of {{Embodied Conversational Agents}} in {{eHealth}}},
  author = {{ter Stal}, Silke and Kramer, Lean Leonie and Tabak, Monique and {op den Akker}, Harm and Hermens, Hermie},
