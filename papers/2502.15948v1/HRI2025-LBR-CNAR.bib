  langid = {english},
  file = {/Users/caterinaneef/Zotero/storage/6GWUS6K4/Zunic et al. - 2020 - Sentiment Analysis in Health and Well-Being Systematic Review.pdf;/Users/caterinaneef/Zotero/storage/SGXGF9XH/e16023.html}
