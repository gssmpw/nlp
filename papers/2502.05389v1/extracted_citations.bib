@article{naderi2023cross,
title = {Cross Corpus Speech Emotion Recognition using transfer learning and attention-based fusion of Wav2Vec2 and prosody features},
journal = {Knowledge-Based Systems},
volume = {277},
pages = {110814},
year = {2023},
issn = {0950-7051},
