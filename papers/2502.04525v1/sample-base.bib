@Article{Brons2021,
author="Brons, Annette
and de Schipper, Antoine
and Mironcika, Svetlana
and Toussaint, Huub
and Schouten, Ben
and Bakkes, Sander
and Kr{\"o}se, Ben",
title="Assessing Children's Fine Motor Skills With Sensor-Augmented Toys: Machine Learning Approach",
