@inproceedings{Hedlund2023,
author = {Hedlund, Martin and Jonsson, Adam and Bogdan, Cristian and Meixner, Gerrit and Ekblom Bak, Elin and Matviienko, Andrii},
title = {BlocklyVR: Exploring Block-based Programming in Virtual Reality},
