@Article{Medrano2023PrecipitationDownscaling,
AUTHOR = {Medrano, Sergio Callaú and Satgé, Frédéric and Molina-Carpio, Jorge and Zolá, Ramiro Pillco and Bonnet, Marie-Paule},
TITLE = {{Downscaling Daily Satellite-Based Precipitation Estimates Using MODIS Cloud Optical and Microphysical Properties in Machine-Learning Models}},
