AUTHOR = {Guth, Peter L. and Van Niekerk, Adriaan and Grohmann, Carlos H. and Muller, Jan-Peter and Hawker, Laurence and Florinsky, Igor V. and Gesch, Dean and Reuter, Hannes I. and Herrera-Cruz, Virginia and Riazanoff, Serge and López-Vázquez, Carlos and Carabajal, Claudia C. and Albinet, Clément and Strobl, Peter},
