@article{Oshnoei_2018,
AUTHOR = {Oshnoei, Arman and Khezri, Rahmat and Muyeen, SM and Blaabjerg, Frede},
TITLE = {On the Contribution of Wind Farms in Automatic Generation Control: Review and New Control Approach},
