@article{Alhasnawi_2021,
AUTHOR = {Alhasnawi, Bilal Naji and Jasim, Basil H. and Sedhom, Bishoy E. and Hossain, Eklas and Guerrero, Josep M.},
TITLE = {A New Decentralized Control Strategy of Microgrids in the Internet of Energy Paradigm},
