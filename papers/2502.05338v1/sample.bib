@inproceedings{speicher,
author = {Bailleu, Maurice and Thalheim, J\"{o}rg and Bhatotia, Pramod and Fetzer, Christof and Honda, Michio and Vaswani, Kapil},
title = {Speicher: Securing LSM-Based Key-Value Stores Using Shielded Execution},
