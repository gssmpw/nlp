@inproceedings{t-lease,
author = {Trach, Bohdan and Faqeh, Rasha and Oleksenko, Oleksii and Ozga, Wojciech and Bhatotia, Pramod and Fetzer, Christof},
title = {T-Lease: A Trusted Lease Primitive for Distributed Systems},
