@inproceedings{10.1145/3477132.3483555,
author = {Schuh, Henry N. and Liang, Weihao and Liu, Ming and Nelson, Jacob and Krishnamurthy, Arvind},
title = {Xenic: SmartNIC-Accelerated Distributed Transactions},
year = {2021},
isbn = {9781450387095},
