	journal = {Frontiers in Medicine},
	author = {Lambisia, Arnold W. and Mohammed, Khadija S. and Makori, Timothy O. and Ndwiga, Leonard and Mburu, Maureen W. and Morobe, John M. and Moraa, Edidah O. and Musyoki, Jennifer and Murunga, Nickson and Mwangi, Jane N. and Nokes, D. James and Agoti, Charles N. and Ochola-Oyier, Lynette Isabella and Githinji, George},
