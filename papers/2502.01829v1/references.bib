	year = {2022},
	note = {Publisher: Nature Publishing Group},
	keywords = {Psychiatric disorders, Psychology, Science, technology and society},
	pages = {1--14},
}

@article{cai_trends_2022,
	title = {Trends {In} {Mental} {Health} {Care} {Delivery} {By} {Psychiatrists} {And} {Nurse} {Practitioners} {In} {Medicare}, 2011–19},
