}

@article{fulmer_using_2018,
	title = {Using {Psychological} {Artificial} {Intelligence} ({Tess}) to {Relieve} {Symptoms} of {Depression} and {Anxiety}: {Randomized} {Controlled} {Trial}},
	volume = {5},
