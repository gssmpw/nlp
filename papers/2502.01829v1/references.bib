@misc{englhardt_classification_2023,
	title = {From {Classification} to {Clinical} {Insights}: {Towards} {Analyzing} and {Reasoning} {About} {Mobile} and {Behavioral} {Health} {Data} {With} {Large} {Language} {Models}},
