@article{altman_why_2020,
	title = {Why {Does} {Therapy} {Work}? {An} {Idiographic} {Approach} to {Explore} {Mechanisms} of {Change} {Over} the {Course} of {Psychotherapy} {Using} {Digital} {Assessments}},
