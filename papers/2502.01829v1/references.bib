	journal = {Implementation Research and Practice},
	author = {Dopp, Alex R and Narcisse, Marie-Rachelle and Mundey, Peter and Silovsky, Jane F and Smith, Allison B and Mandell, David and Funderburk, Beverly W and Powell, Byron J and Schmidt, Susan and Edwards, Daniel and Luke, Douglas and Mendel, Peter},
