	journal = {JMIR Mental Health},
	author = {Yoo, Dong Whi and Birnbaum, Michael L and Van Meter, Anna R and Ali, Asra F and Arenare, Elizabeth and Abowd, Gregory D and De Choudhury, Munmun},
	month = aug,
	year = {2020},
