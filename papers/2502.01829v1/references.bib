	journal = {Clinical Psychology: Science and Practice},
	author = {Lindhiem, Oliver and Bennett, Charles B. and Orimoto, Trina E. and Kolko, David J.},
	year = {2016},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/cpsp.12153},
	keywords = {clinical trials, meta-analysis, personalized treatment goals, psychotherapy, treatment outcome},
