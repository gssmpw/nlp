	urldate = {2024-04-04},
	journal = {Applied Clinical Informatics},
	author = {Lim, Han Chang and Austin, Jodie A. and van der Vegt, Anton H. and Rahimi, Amir Kamel and Canfell, Oliver J. and Mifsud, Jayden and Pole, Jason D. and Barras, Michael A. and Hodgson, Tobias and Shrapnel, Sally and Sullivan, Clair M.},
