@article{kamoun_exploring_2024,
	title = {Exploring {Students}’ and {Faculty}’s {Knowledge}, {Attitudes}, and {Perceptions} {Towards} {ChatGPT}: {A} {Cross}-{Sectional} {Empirical} {Study}},
	volume = {23},
	copyright = {https://creativecommons.org/licenses/by-nc/4.0/},
