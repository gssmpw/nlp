	booktitle = {2019 {IEEE} {International} {Conference} on {Cyborg} and {Bionic} {Systems} ({CBS})},
	publisher = {IEEE},
	author = {Schonleitner, Florian M. and Otter, Lukas and Ehrlich, Stefan K. and Cheng, Gordon},
	month = sep,
	year = {2019},
	keywords = {0109, adaptive errp classifier, generic errp classifier},
	pages = {85--90},
}

@article{schonleitner_calibration-free_2020,
